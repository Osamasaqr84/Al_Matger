<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="DepartmentPinding4">
        <variable
            name="departmentmodel"
            type="com.example.hossam.al_matger.HomeActivity4.ViewModel.DepartmentViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/doctorlayout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/home1_dept_background"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/doctorimage"
            android:layout_width="75dp"
            android:layout_margin="10dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/pharma"
            />

        <TextView
            android:id="@+id/doctorname"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical|center"
            android:textSize="16dp"
            android:text="@{departmentmodel.name}"
            />

    </LinearLayout>
</layout>