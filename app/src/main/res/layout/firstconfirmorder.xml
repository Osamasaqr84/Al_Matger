<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_home3"
    tools:context=".HomeActivity1.Activities.HomeActivity1">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/back_home3"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/st1"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/menu"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="@id/st1"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/parashot"
            />

        <ImageView
            android:id="@+id/st2"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/search"
            />
    </android.support.constraint.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/menu_main"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@+id/menu_main"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/header">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:elevation="17dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:gravity="center"
                android:background="@drawable/back2_resturant"
                android:text="PIZZA HUT"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_marginStart="45dp"
            android:padding="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rest_logo_back"
            android:src="@drawable/pizzalogo"
            android:layout_height="100dp"/>
</LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="متجر متخصصمتجر متخصصمتجر متخصصمتجر متخصصمتجر متخصصمتجر
       متخصصمتجر متخصصمتجر متخصصمتجر متخصص "/>

    <LinearLayout
        android:id="@+id/choose_place"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/linear_background_in_confirm_order"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/order_map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginStart="10dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:text="حدد مكان التوصيل" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/prev" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/choose_lin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/linear_background_in_confirm_order"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/clock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginStart="10dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:id="@+id/city_name"
            android:text="الــــتوصيل خـــلال " />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/prev" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/addimage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/linear_background_in_confirm_order"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/order_camp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:text="أضـــف صـــــورة" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:textColor="@color/white"
            android:text="(اختياري)" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/prev" />

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_background_in_confirm_order"/>

</LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/menu_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/confirm_order_back"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/cart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="تأكيد الطلب"
                android:lines="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"

                />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>