<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_home3"
    tools:context=".HomeActivity1.Activities.HomeActivity1">




    <android.support.constraint.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/back_home3"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/st1"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/menu"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="@id/st1"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/parashot"
            />

        <ImageView
            android:id="@+id/st2"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/search"
            />

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/menu_main"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/lineview"
            />
     <LinearLayout
            android:id="@+id/head1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:weightSum="7">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_weight="2.5"
                android:layout_gravity="center"
                android:src="@drawable/view1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إنهاء الطلب"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:layout_weight="2"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_weight="2.5"
                android:layout_gravity="center"
                android:src="@drawable/view2"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/lineview"
            />


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fullcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="25dp"
                android:layout_marginTop="50dp"
                android:isScrollContainer="true"
                android:layout_gravity="center|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    android:text="شكرا .. تمت العملية بنجاح"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/confirm" />


            <TextView
                android:id="@+id/home_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_background_for_make"
                android:text="الانتقال الي المندوب"
                android:padding="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:textSize="18dp" />

    </LinearLayout>

</ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/mainfooter"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>