<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data class ="SubCategry2Binding">
        <variable
            name="subCategrymodel"
            type="com.example.hossam.al_matger.SecondSubCategry.ViewModel.SubCat_ItemViewModel"/>
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/linear_background_for_subcat"
    android:layout_margin="5dp"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
       >
        
        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/mobile"/>

        <LinearLayout
            android:id="@+id/ratlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <RatingBar
                android:id="@+id/rates"
                style="@style/StarRatingBars"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:rating="5"
                android:layout_marginTop="5dp"
                android:isIndicator="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="("
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/customer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{subCategrymodel.ratecount}"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=")"
                android:textColor="@color/gray" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#D9D9D9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="7dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="@{subCategrymodel.name}"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="5"
                android:padding="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{subCategrymodel.price}"
                    android:textSize="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شحن مجاني من المتجر "
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_gravity="start"
                    android:background="@drawable/salefromstor_back"
                    android:padding="2dp"
                    android:layout_weight="2.8"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="أضف للسلة "
                    android:lines="1"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:drawableStart="@drawable/cart"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/addtocart_back"
                    android:paddingRight="27dp"
                    android:paddingLeft="27dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
</layout>