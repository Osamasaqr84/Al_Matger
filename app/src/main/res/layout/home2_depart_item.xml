<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="DepartmentPinding">
        <variable
            name="departmentmodel"
            type="com.example.hossam.al_matger.HomeActivity2.ViewModel.DepartmentViewModel"/>
    </data>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@drawable/dept_background"
    android:padding="5dp"
    >

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/pharma"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:maxLines="1"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="@{departmentmodel.name}"/>

</android.support.constraint.ConstraintLayout>
</layout>