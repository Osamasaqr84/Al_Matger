<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@drawable/linear_background_for_subcat3"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/next" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="0.8">
            </android.support.v4.view.ViewPager>


            <ImageView
                android:id="@+id/prev"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/prev" />

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D9D9D9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginStart="9dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="هواوي نوفا  i3بشريحتي اتصال "
                    />

                <LinearLayout
                    android:id="@+id/ratlin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <RatingBar
                        android:id="@+id/rates"
                        style="@style/StarRatingBars"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:rating="5"
                        android:isIndicator="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:text=")"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/customer_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="122"
                        android:textColor="@color/gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="("
                        android:textColor="@color/gray" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textSize="14dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginEnd="7dp"
                    android:textColor="@color/black"
                    android:text="5.849.00 ريال"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شحن مجاني من المتجر "
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="10dp"
                    android:layout_gravity="end"
                    android:background="@drawable/salefromstor_back"
                    android:padding="2dp"
                  />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="أضف للسلة "
                android:lines="1"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"
                android:gravity="center"
                android:drawableStart="@drawable/cart"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/addtocart_back"
                android:paddingRight="27dp"
                android:paddingLeft="27dp"
                />

        </LinearLayout>

        </LinearLayout>


    </LinearLayout>


